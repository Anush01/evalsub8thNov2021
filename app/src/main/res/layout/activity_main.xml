<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RandomUserView"
    android:background="@color/black">

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FirstTimeSetup"
        android:backgroundTint="@color/buttonyellow"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:padding="20dp"
        android:textSize="20sp"
        app:cornerRadius="30dp"
        android:text="@string/setup_random_user_activity"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:gravity="center"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gotoRandomUserActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FirstTimeSetup"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/buttonyellow"
        android:padding="20dp"
        android:text="@string/go_to_random_user_activity"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="30dp" />

</RelativeLayout>